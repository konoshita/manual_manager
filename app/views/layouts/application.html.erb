<!DOCTYPE html>
<html>
  <head>
    <title>SampleManual</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "bootstrap.min", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "costom", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    </head>
    <body >
    <div class="for-pc">
      <%= render 'shared/sidebar' %>
    </div>
    <div class="for-sp">
    <%= render 'shared/spmenu' %>
    </div>
    <div id="container">
      <header id="global-head">
      <div class="row">
      <div class="col-8 col-md-12">
        <h1 id="brand-logo"><i class="fa fa-ghost text-warning" ></i> BI-BO</h1>
        </div>
        <div class="col-4 for-sp">
        <ul class="header-dropmenu">
      <li>
        <a href="#" class="text-center"><i class="fas fa-user-circle footer-icon"></i></a>
        <ul>
          <li><a href="#"><% if user_signed_in? %>
          <%= current_user.name =%>
          <%end%></a></li>
          <li><%= button_to "ログアウト", destroy_user_session_path, method: :delete %></li>
          <% if current_user.admin? %>
			    <li>
			      <%= link_to '管理者パネル', admin_root_path %>
			    </li>
			      <% end %>
        </ul>
      </li>
    </ul></div>
    </div>
      </header>
      <main id="main">
        <div id="main-visual">
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1><%= yield :'content-header' %></h1>
                <%= breadcrumbs separator: " &rsaquo; " ,style: :ol, class: 'breadcrumb'%>
              </div>
            </div>
          </div><!-- /.container-fluid -->
        </section>
        <%= render 'shared/flash_messages' %>
        <%= yield %>
        </div>
      </main>
    </div><!-- /#container -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/velocity/1.5.0/velocity.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.perfect-scrollbar/0.8.1/js/perfect-scrollbar.jquery.min.js"></script>
    <script type="text/javascript">
    (function($) {
        $(function () {
    
            // サイドサブメニューアコーディオン
            $('.sub-menu-head').on('click', function(){
                var $subNav = $(this).next('.sub-menu-nav');
                if ($subNav.is(':visible')) {
                    $subNav.velocity('slideUp', {duration: 200});
                    $(this).parent('li').removeClass('is-active');
                }
                else {
                    $subNav.velocity('slideDown', {duration: 200});
                    $(this).parent('li').addClass('is-active');
                }
                return false;
            });
    
            $('#nav-toggle').on('click', function() {
                $('body').toggleClass('close');
            });
    
            $('.scroll').perfectScrollbar();
        });
    })(jQuery);
    </script>
    <script>
    $(function(){
      $('.flash-message').fadeOut(4000);
    });</script>
    </body>
</html>
