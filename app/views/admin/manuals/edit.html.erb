<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
      <h1><%= t('.title') %></h1>
      </div>
      <div class="col-sm-6">
      <% breadcrumb :admin_manuals %>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <div class="card">
        <div class="card-header">
          <i class="bi bi-calendar me-2"></i>
          <span>マニュアル編集</span>
        </div>
        <div class="card-body">
        <%= form_with url: admin_manual_path, model: @manual, local: true do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <div class="mb-3">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
          
          <div class="mb-3">
            <%= f.label :categorie_id %>
            <%= f.collection_select :category_id, Category.all, :id, :name, {}, class: 'form-select' %>
          </div>
          <%= f.submit '登録', class: 'btn btn-primary' %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
