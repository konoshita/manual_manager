<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <div class="text-right mb-3">
        <%= link_to t('defaults.edit'), edit_admin_manual_path(@manual), class: 'btn btn-success' %>
        <%= link_to t('defaults.delete'), admin_manual_path(@manual), method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
      </div>
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%= Manual.human_attribute_name(:id) %></th>
          <td><%= @manual.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= Manual.human_attribute_name(:title) %></th>
          <td><%= @manual.title %></td>
        </tr>
        <tr>
          <th scope="row"><%= Manual.human_attribute_name(:user_id) %></th>
          <td><%= @manual.user.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= Manual.human_attribute_name(:created_at) %></th>
          <td><%= @manual.created_at %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
