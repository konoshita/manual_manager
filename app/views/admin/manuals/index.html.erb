<% content_for(:title, t('.title')) %>
<div class="container mb-5 pt-2">
  <h1><%= t('.title') %></h1>
  <div class="row">
    <div class="col-md-12 mb-3">
     
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col"><%= Manual.human_attribute_name(:id) %></th>
          <th scope="col"><%= Manual.human_attribute_name(:title) %></th>
          <th scope="col"><%= Manual.human_attribute_name(:user_id) %></th>
          <th scope="col"><%= Manual.human_attribute_name(:created_at) %></th>
          <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <% if @manuals.present? %>
          <%= render @manuals %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <!-- ページネーション -->
      
    </div>
  </div>
</div>
