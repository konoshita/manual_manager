<div class="login">
  <h2 class="active"> sign up </h2>

  <h2 class="nonactive"> sign in </h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %> <br />
    <%= f.text_field :name ,class:"form-text" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-text" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" ,class:"form-text" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form-text" %>
  </div>

  <div class="actions">
    <%= f.submit (t 'defaults.register') ,class:"signin-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
