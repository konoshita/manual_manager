<% content_for(:title, t('.title')) %>
<% breadcrumb :category_manuals_path, @categories %>
    <!-- 掲示板一覧 -->
    <div class="container">
      <div class="section-block-grey">
      <h3>マニュアルメニュー</h3>
        <div class="row mt-60">
          <div class="col-md-12">
            <div class="serv-section-3">
              <div class="serv-section-3-icon"><i class="fa fa-check" aria-hidden="true"></i></div>
                <div class="serv-section-desc">
                  <h4><%= @categories.name %></h4>
                      <h5>Each Title</h5>
                </div>
                <div class="section-heading-line-left"></div>
            </div>
              <!-- 各カテゴリー内 マニュアル一覧 -->
              <div class="row row-cols-1 mb-3">
                <% @categories.manuals.each do |manual| %>
                  <%= link_to manual_path(manual) do %>
                    <div class="row g-0 btnarrow5">  
                      <div class="col-11">
                      <%= manual.title %>
                      </div>
                      <div class="col-1">
                      <i class="fa fa-chevron-right" aria-hidden="true"></i>
                      </div>
                    </div>
                  <% end %>
                <% end %> 
              </div>
              <!-- /掲示板一覧 -->
            </div>
          </div>
        </div>
      </div>